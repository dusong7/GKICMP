@*正文部分*@
<div class="web_main">
    <div class="xxxw">
        <div class="title"><span>今日关注</span></div>
        <div class="xxxw_left">
            <div class="gt-slide-wrapper">
                <div id="gt-slide-focus">
                    <ul>
                        @foreach (New news in ViewBag.ImageNew)
                        {
                            <li>
                                <a href="/Index/Article/@news.NID" target="_blank">
                                    <img src="@news.ImageUrl" alt="@news.NewsTitle" />
                                </a>
                            </li>
                        }
                    </ul>
                </div>
                <script type="text/javascript">
                    $(document).ready(function () {
                        $("#gt-slide-focus").height($("#gt-slide-focus").width() * 278 / 305);
                    });
                </script>
            </div>
        </div>
        <div class="xxxw_right">
            <div class="xxxw_nr">
                <ul class="articlelist">

                    @foreach (New news in ViewBag.Recommand)
                    {
                        <li>
                            <span class="right">@news.CreateDate.ToString("MM-dd")</span>
                            <span class="articlelist_title" style="">
                                <a href="/Index/Article/@news.NID" target="_blank" title="@news.NewsTitle">
                                    @news.NewsTitle
                                </a>

                            </span>
                        </li>
                    }
                </ul>

            </div>
        </div>
    </div>

    @Html.Action("IndexColumn", new { menuid = 2, left = 15 })
</div>

